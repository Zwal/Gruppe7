<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <ImageButton
        android:id="@+id/btnZur체ck"
        android:layout_width="71dp"
        android:layout_height="41dp"
        android:layout_weight="1"
        android:background="@null"
        android:backgroundTint="@color/colorPrimary"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015"
        app:srcCompat="@mipmap/baseline_arrow_back_black_24"/>

    <Button
        android:id="@+id/btnKlappen"
        android:layout_width="63dp"
        android:layout_height="39dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Filter"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconBenutzer"
        android:layout_width="35dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/baseline_account_circle_black_24" />

    <TextView
        android:id="@+id/Benutzername"
        android:layout_width="94dp"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/benutzername"
        android:textAllCaps="false"
        android:textColor="#000"
        app:layout_constraintEnd_toStartOf="@+id/iconBenutzer"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintLayout1"
        android:layout_width="362dp"
        android:layout_height="493dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="116dp">


        <Spinner
            android:id="@+id/kategorie"
            android:layout_width="@dimen/TxtAnfrageWidth"
            android:layout_height="@dimen/TxtAnfrageHeight"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:entries="@array/category"
            android:prompt="@string/category_prompt"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toTopOf="@+id/zeitraumText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/zeitraumText"
            android:layout_width="175dp"
            android:layout_height="23dp"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/reparaturzeitraum_anfrage"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/btnDateRepAnfang"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnDateRepAnfang"
            android:layout_width="@dimen/TxtAnfrageWidth"
            android:layout_height="@dimen/TxtAnfrageHeight"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="36dp"
            android:text="@string/anfang"
            app:layout_constraintBottom_toTopOf="@+id/txtDateError"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnDateRepEnde"
            android:layout_width="@dimen/TxtAnfrageWidth"
            android:layout_height="@dimen/TxtAnfrageHeight"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:text="@string/ende"
            app:layout_constraintBottom_toTopOf="@+id/seekBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btnDateRepAnfang"
            app:layout_constraintTop_toBottomOf="@+id/zeitraumText"
            app:layout_constraintVertical_bias="0.184" />

        <TextView
            android:id="@+id/txtDateError"
            android:layout_width="280dp"
            android:layout_height="36dp"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/date_error"
            android:visibility="invisible"
            android:textAllCaps="false"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/radiusText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <SeekBar
            android:id="@+id/seekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="217dp"
            android:layout_height="23dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:max="10"
            android:progress="5"
            app:layout_constraintBottom_toTopOf="@+id/txtRadius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintStart_toEndOf="@+id/radiusText" />

        <TextView
            android:id="@+id/radiusText"
            android:layout_width="48dp"
            android:layout_height="21dp"
            android:layout_marginBottom="164dp"
            android:layout_marginStart="60dp"
            android:text="Radius"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnSuchen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Suchen"
            app:layout_constraintBottom_toTopOf="@+id/txtKeineAuftr채ge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtRadius"
            android:layout_width="57dp"
            android:layout_height="17dp"
            android:layout_marginBottom="36dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="50 km"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/btnSuchen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.598"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtKeineAuftr채ge"
            android:layout_width="265dp"
            android:layout_height="25dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/keine_auftr채ge"
            android:textAllCaps="false"
            android:textColor="#000"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </android.support.constraint.ConstraintLayout>


    <ListView
        android:id="@+id/listV"
        android:layout_width="362dp"
        android:layout_height="493dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>