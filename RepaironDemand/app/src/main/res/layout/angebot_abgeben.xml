<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:background="@mipmap/background2"
    tools:layout_editor_absoluteY="25dp">

    <ImageButton
        android:id="@+id/btnZur端ck"
        android:layout_width="71dp"
        android:layout_height="41dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/baseline_arrow_back_black_24" />

    <Spinner
        android:id="@+id/spinnerProfile"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/baseline_account_circle_black_24"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/logoAngebot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Benutzername"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/benutzername"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/logohome"
        app:layout_constraintEnd_toStartOf="@+id/spinnerProfile"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@+id/btnZur端ck"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363" />

    <ImageView
        android:id="@+id/logoAngebot"
        android:layout_width="400dp"
        android:layout_height="113dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo_banner2" />

    <EditText
        android:id="@+id/preis"
        android:layout_width="@dimen/TxtAnfrageWidth"
        android:layout_height="@dimen/TxtAnfrageHeight"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Preis"
        android:inputType=""
        app:layout_constraintBottom_toTopOf="@+id/hinweisPreis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoAngebot" />

    <TextView
        android:id="@+id/hinweisPreis"
        android:layout_width="197dp"
        android:layout_height="19dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Preis muss ausgef端llt werden."
        android:textAllCaps="false"
        android:visibility="invisible"
        android:textColor="#ff3227"
        app:layout_constraintBottom_toTopOf="@+id/zeitraum_head"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/zeitraum_head"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="312dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Zeitraum"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/zeitraum_start"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Start"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/zeitraum_auswahl_start"
        app:layout_constraintEnd_toStartOf="@+id/zeitraum_ende"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zeitraum_head"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/zeitraum_ende"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="92dp"
        android:layout_marginTop="16dp"
        android:text="Ende"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/zeitraum_auswahl_Ende"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zeitraum_head"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/zeitraum_auswahl_start"
        android:layout_width="@dimen/TxtAnfrageWidth"
        android:layout_height="@dimen/TxtAnfrageHeight"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="8dp"
        android:text="@string/start"
        android:alpha="0.9"
        app:layout_constraintBottom_toTopOf="@+id/hinweis_zeitraum"
        app:layout_constraintEnd_toStartOf="@+id/zeitraum_auswahl_Ende"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/zeitraum_auswahl_Ende"
        android:layout_width="@dimen/TxtAnfrageWidth"
        android:layout_height="@dimen/TxtAnfrageHeight"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="32dp"
        android:text="@string/ende"
        android:alpha="0.9"
        app:layout_constraintBottom_toTopOf="@+id/hinweis_zeitraum"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/hinweis_zeitraum"
        android:layout_width="345dp"
        android:layout_height="21dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Zeitraum der Durchf端hrung muss angegeben werden."
        android:textAllCaps="false"
        android:textColor="#ff3227"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/beschreibung_head"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/beschreibung_head"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Beschreibung"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/beschreibung"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/beschreibung"
        android:layout_width="244dp"
        android:layout_height="79dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Beschreibung"
        android:inputType=""
        android:singleLine="false"
        android:background="#FFFFFF"
        android:alpha="0.9"
        app:layout_constraintBottom_toTopOf="@+id/btnSenden"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.314"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSenden"
        android:layout_width="113dp"
        android:layout_height="69dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Senden"
        android:alpha="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>