<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background2"
    tools:layout_editor_absoluteY="25dp">

    <TextView
    android:id="@+id/Benutzername"
    android:layout_width="wrap_content"
    android:layout_height="20dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="10dp"
    android:text="@string/benutzername"
    android:textAllCaps="false"
    android:textColor="#000"
    android:textSize="18dp"
    app:layout_constraintEnd_toStartOf="@+id/spinnerProfile"
    app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logohome"
        android:layout_width="400dp"
        android:layout_height="111dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerProfile"
        app:srcCompat="@mipmap/logo_banner2" />

    <ImageButton
        android:id="@+id/btnZurück"
        android:layout_width="71dp"
        android:layout_height="41dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/baseline_arrow_back_black_24" />

    <Spinner
        android:id="@+id/spinnerProfile"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/baseline_account_circle_black_24"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="FAQ"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logohome" />

    <TextView
        android:id="@+id/antwort"
        android:layout_width="327dp"
        android:layout_height="355dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="18dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head" />

    <Button
        android:id="@+id/btnKlappe"
        android:layout_width="88dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitCenter"
        android:text="Fragen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logohome" />

    <Button
        android:id="@+id/btnPasswort"
        android:layout_width="325dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitCenter"
        android:text="@string/passwort_frage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head" />

    <Button
        android:id="@+id/btnAuftragEinsehen"
        android:layout_width="325dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitCenter"
        android:text="@string/auträgeEinsehen_frage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPasswort" />

    <Button
        android:id="@+id/btnAuftragAbbrechen"
        android:layout_width="325dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitCenter"
        android:text="@string/aufträgeAbbrechen_frage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAuftragEinsehen" />

    <Button
        android:id="@+id/btnSupportErreichen"
        android:layout_width="325dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitCenter"
        android:text="@string/supportErreichen_frage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAuftragAbbrechen" />

    <Button
        android:id="@+id/btnAuftragnehmer"
        android:layout_width="325dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitCenter"
        android:text="@string/auftragnehmer_frage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSupportErreichen" />

    <Button
        android:id="@+id/btnZahlung"
        android:layout_width="325dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitCenter"
        android:text="@string/zahlung_frage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAuftragnehmer" />

</android.support.constraint.ConstraintLayout>
