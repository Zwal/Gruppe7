<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background2"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/Benutzername"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/benutzername"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/spinnerProfile"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/logohome"
        android:layout_width="400dp"
        android:layout_height="111dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerProfile"
        app:srcCompat="@mipmap/logo_banner2" />

    <TextView
        android:id="@+id/linkImpressum"
        android:layout_width="78dp"
        android:layout_height="18dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Impressum"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:background="#FFFFFF"
        android:alpha="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="1.0" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.837">

        <TableRow>

            <Button
                android:id="@+id/btnAnfrageerstellen"
                android:layout_width="140dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@mipmap/baseline_description_black_48"
                android:gravity="bottom"
                android:text="@string/anfrage_erstellen"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/TxtSize"
                android:textAlignment="center"
                android:alpha="0.9"/>

            <Button
                android:id="@+id/btnEingestellteAuftr채ge"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@mipmap/baseline_book_black_48"
                android:text="@string/eingestellte_auftr채ge"
                android:textAllCaps="false"
                android:textColor="#000"
                android:gravity="bottom"
                android:textSize="@dimen/TxtSize"
                android:textAlignment="center"
                android:alpha="0.9"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnAuftr채gesuchen"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@mipmap/baseline_search_black_48"
                android:gravity="bottom"
                android:text="@string/auftr채ge_suche"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/TxtSize"
                android:textAlignment="center"
                android:alpha="0.9"/>


            <Button
                android:id="@+id/btnAbgegebeneAngebote"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@mipmap/baseline_receipt_black_48"
                android:gravity="bottom"
                android:text="@string/abgegebene_angebote"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/TxtSize"
                android:textAlignment="center"
                android:alpha="0.9"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnFeedback"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@mipmap/baseline_bar_chart_black_48"
                android:gravity="bottom"
                android:text="@string/feedback"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/TxtSize"
                android:textAlignment="center"
                android:alpha="0.9"/>

            <Button
                android:id="@+id/btnKalender"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@mipmap/baseline_event_black_48"
                android:gravity="bottom"
                android:text="@string/kalender"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/TxtSize"
                android:textAlignment="center"
                android:alpha="0.9"/>
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnBenachrichtigungen"
                android:layout_width="144dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@mipmap/baseline_local_post_office_black_48"
                android:gravity="bottom"
                android:text="@string/benachrichtigungen"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/TxtSize"
                android:textAlignment="center"
                android:alpha="0.9"/>

            <Button
                android:id="@+id/btnServiceCenter"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@mipmap/baseline_question_answer_black_48"
                android:gravity="bottom"
                android:text="@string/service_center"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/TxtSize"
                android:textAlignment="center"
                android:alpha="0.9"/>
        </TableRow>
    </TableLayout>

    <Spinner
        android:id="@+id/spinnerProfile"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/baseline_account_circle_black_24"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
