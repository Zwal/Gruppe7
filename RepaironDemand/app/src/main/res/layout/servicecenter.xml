<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">


    <ImageButton
        android:id="@+id/btnZurÃ¼ck"
        android:layout_width="71dp"
        android:layout_height="41dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/baseline_arrow_back_black_24" />

    <ImageView
        android:id="@+id/iconlogo"
        android:layout_width="72dp"
        android:layout_height="44dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="41dp" />

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Service Center"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="102dp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.767">

        <TableRow>

            <Button
                android:id="@+id/btnFAQ"
                android:layout_width="140dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@mipmap/baseline_description_black_48"
                android:gravity="bottom"
                android:text="FAQ"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/TxtSize" />

            <Button
                android:id="@+id/btnSupport"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@mipmap/baseline_book_black_48"
                android:gravity="bottom"
                android:text="Support"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/TxtSize" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnBeschwerde"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@mipmap/baseline_search_black_48"
                android:gravity="bottom"
                android:text="Beschwerde"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/TxtSize" />


            <Button
                android:id="@+id/btnNutzungsbedingungen"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@mipmap/baseline_receipt_black_48"
                android:gravity="bottom"
                android:text="Nutzungsbedingungen"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/TxtSize" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
