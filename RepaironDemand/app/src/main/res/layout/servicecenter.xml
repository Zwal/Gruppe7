<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background2"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/Benutzername"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/benutzername"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="18dp"
        app:layout_constraintEnd_toStartOf="@+id/spinnerProfile"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logohome"
        android:layout_width="400dp"
        android:layout_height="111dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerProfile"
        app:srcCompat="@mipmap/logo_banner2" />

    <ImageButton
        android:id="@+id/btnZurÃ¼ck"
        android:layout_width="71dp"
        android:layout_height="41dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/baseline_arrow_back_black_24" />

    <Spinner
        android:id="@+id/spinnerProfile"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/baseline_account_circle_black_24"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Service Center"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logohome" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head">

        <TableRow>

            <Button
                android:id="@+id/btnFAQ"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:alpha="0.9"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@mipmap/baseline_question_answer_black_48"
                android:gravity="bottom"
                android:text="FAQ"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/TxtSize" />

            <Button
                android:id="@+id/btnSupport"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:alpha="0.9"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@mipmap/baseline_people_black_48"
                android:gravity="bottom"
                android:text="Support"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/TxtSize" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnBeschwerde"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:alpha="0.9"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@mipmap/baseline_error_black_48"
                android:gravity="bottom"
                android:text="Beschwerde"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/TxtSize" />


            <Button
                android:id="@+id/btnNutzungsbedingungen"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:alpha="0.9"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTop="@mipmap/baseline_account_balance_black_48"
                android:gravity="bottom"
                android:text="Nutzungsbedingungen"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="@dimen/TxtSize" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
