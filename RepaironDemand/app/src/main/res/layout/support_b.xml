<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <ImageButton
        android:id="@+id/btnZurück"
        android:layout_width="71dp"
        android:layout_height="41dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/baseline_arrow_back_black_24" />

    <ImageView
        android:id="@+id/iconlogo"
        android:layout_width="72dp"
        android:layout_height="44dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="41dp" />

    <TextView
        android:id="@+id/head"
        android:layout_width="281dp"
        android:layout_height="26dp"
        android:text="Bitte geben Sie eine Nachricht ein."
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="104dp" />

    <EditText
        android:id="@+id/text"
        android:layout_width="321dp"
        android:layout_height="155dp"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="149dp" />

    <TextView
        android:id="@+id/meldung"
        android:layout_width="127dp"
        android:layout_height="27dp"
        android:text="Bitte ausfüllen."
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="304dp" />

    <Button
        android:id="@+id/btnSenden"
        android:layout_width="149dp"
        android:layout_height="53dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@null"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitCenter"
        android:text="Senden"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="377dp" />
</android.support.constraint.ConstraintLayout>
